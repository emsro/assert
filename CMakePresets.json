{
  "version": 6,
  "configurePresets": [
    {
      "name": "debug",
      "binaryDir": "_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_FLAGS": "-Wall -Wextra"
      }
    },
    {
      "name": "asan",
      "binaryDir": "_build",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=address"
      }
    },
    {
      "name": "ubsan",
      "binaryDir": "_build",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=undefined"
      }
    },
    {
      "name": "release",
      "binaryDir": "_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "ubsan",
      "configurePreset": "ubsan"
    },
    {
      "name": "release",
      "configurePreset": "release"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "ubsan",
      "configurePreset": "ubsan"
    },
    {
      "name": "release",
      "configurePreset": "release"
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "steps": [
        {
          "name": "debug",
          "type": "configure"
        },
        {
          "name": "debug",
          "type": "build"
        },
        {
          "name": "debug",
          "type": "test"
        }
      ]
    },
    {
      "name": "release",
      "steps": [
        {
          "name": "release",
          "type": "configure"
        },
        {
          "name": "release",
          "type": "build"
        },
        {
          "name": "release",
          "type": "test"
        }
      ]
    }
  ]
}
